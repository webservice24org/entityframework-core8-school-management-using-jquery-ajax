@model MohiuddinCoreMasterDetailCrud.Models.ViewModels.DepartmentViewModel

@{
    ViewData["Title"] = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-lg bg-body-tertiary">
            <div class="card-header">
                <h2 class="float-start">Department List</h2>
                <button type="button" id="addDepartmentBtn" class="float-end btn btn-success" data-bs-toggle="modal" data-bs-target="#DepartmentModal">
                    Add Department
                </button>
            </div>
            <div class="card-body">
                <div id="DepartmentSection">
                </div>

            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="DepartmentModal" tabindex="-1" aria-labelledby="DepartmentModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="DepartmentModallLabel"></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="DepartmentForm">
                    <input type="hidden" asp-for="DepartmentID" />
                    <div class="form-group mb-2">
                        <label asp-for="DepartmentName" class="control-label mb-1"></label>
                        <input asp-for="DepartmentName" class="form-control" placeholder="Department Name" />
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Budget" class="control-label mb-1"></label>
                        <input asp-for="Budget" class="form-control" placeholder="Department Budget" />
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="StartDate" class="control-label mb-1"></label>
                        <input asp-for="StartDate" class="form-control" />
                    </div>

                    <div class="form-group mb-2">
                        <label asp-for="InstructorID" class="control-label mb-1"></label>
                        <select class="form-control" asp-for="InstructorID">
                            <option value="0">---Select Instructor---</option>
                        </select>
                        <span asp-validation-for="InstructorID" class="text-danger"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" id="saveDepartment" class="btn btn-primary">Insert</button>
                <button type="button" id="updateDepartment" class="btn btn-primary">Update</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/department.js"></script>