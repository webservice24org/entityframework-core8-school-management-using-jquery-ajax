@model MohiuddinCoreMasterDetailCrud.Models.ViewModels.InstructorViewModel

@{
    ViewData["Title"] = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h2 class="float-start">Instructor List</h2>
                <button type="button" id="addInstructorBtn" class="float-end btn btn-success" data-bs-toggle="modal" data-bs-target="#instructorModal">
                    Add Instructor
                </button>
            </div>
            <div class="card-body">
                <div id="InstructorBody"></div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="instructorModal" tabindex="-1" aria-labelledby="StudentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="instructorModalLabel"></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="instructorForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" asp-for="InstructorID" />
                    <div class="row mb-2">
                        <div class="col-md-4">
                            <div class="form-group mb-2">
                                <label asp-for="FirstName" class="control-label mb-1"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-2">
                                <label asp-for="LastName" class="control-label mb-1"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-2">
                                <label asp-for="Mobile" class="control-label mb-1"></label>
                                <input asp-for="Mobile" class="form-control" />
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-2">
                        <div class="col-md-4">
                            <div class="form-group mb-2">
                                <label asp-for="JoinDate" class="control-label mb-1"></label>
                                <input asp-for="JoinDate" class="form-control" />
                                <span asp-validation-for="JoinDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-2">
                                <label asp-for="Salary" class="control-label mb-1"></label>
                                <input asp-for="Salary" class="form-control" />
                                <span asp-validation-for="Salary" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-2">
                                <label asp-for="Dob" class="control-label mb-1"></label>
                                <input asp-for="Dob" class="form-control" />
                                <span asp-validation-for="Dob" class="text-danger"></span>
                            </div>
                        </div>
                    </div>   
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <label asp-for="PresentAddress" class="control-label mb-1"></label>
                            <input asp-for="PresentAddress" class="form-control" />
                            <span asp-validation-for="PresentAddress" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PermanentAddress" class="control-label mb-1"></label>
                            <input asp-for="PermanentAddress" class="form-control" />
                            <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-12">
                            <h2>Assign Courses</h2>
                            <div id="courses">

                            </div>
                        </div>
                    </div>

                    <div class="row mt-5">
                        <div class="col-md-5">
                            <label asp-for="OfficeAssignment.Location" class="control-label mb-1"></label>
                            <input asp-for="OfficeAssignment.Location" class="form-control" />
                            <span asp-validation-for="OfficeAssignment.Location" class="text-danger"></span>
                        </div>
                        <div class="col-md-7">
                            <div class="row">
                                <div class="form-group col-md-7">
                                    <label asp-for="InstructorProfile" class="control-label mb-1"></label>
                                    <input asp-for="InstructorProfile" type="file" class="custom-file-input" onchange="readUrl(this)" />
                                </div>
                                <div class="form-group col-md-5">
                                    <img id="InstructorProfile" src="~/Images/noimage.jpg" class="img-thumbnail" />
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" id="saveInstructor" class="btn btn-primary">Insert</button>
                    <button type="button" id="updateInstructor" class="btn btn-primary">Update</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="InstructordetailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="InstructordetailsModalLabel">Details Information of: <span id="InstructordetailsModalLabelName" class="fw-bold"></span></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="InstructorDetails">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/Instructor.js"></script>
